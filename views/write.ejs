<script>
function make_board(){
  alert('안녕!')
  let author = $("#author").val();
  let pw = $("#pw").val();
  let title = $("#title").val();
  let content = $("#content").val();
  
  $.ajax({
        type:"POST",
        url:"/api/board",
        data:{
          'author' : author,
          'pw' : pw,
          'title' : title,
          'content' : content
        },
        success:function(response){
          if(response['result'] == "success"){
            alert("성공적으로 글이 저장됐습니다.")
            window.location.href ="/board"
          }
        }
  })
}



</script>



